# syntax=docker/dockerfile:1
FROM php:8.4-fpm

# ติดตั้ง System Dependencies (poppler-utils สำหรับ pdftohtml)
# หมายเหตุ: ลบ mongodb, autoconf, g++, make, libssl-dev ออกเพราะไม่ได้ใช้
# ใช้ BuildKit cache mount เพื่อไม่ต้อง apt-get update ใหม่ทุก build
RUN --mount=type=cache,target=/var/cache/apt,sharing=locked \
    --mount=type=cache,target=/var/lib/apt,sharing=locked \
    apt-get update && apt-get install -y --no-install-recommends \
        libzip-dev \
        unzip \
        libxml2-dev \
        libonig-dev \
        libpng-dev \
        libjpeg-dev \
        libfreetype6-dev \
        poppler-utils \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install zip xml pdo pdo_mysql mbstring gd pcntl

# ติดตั้ง Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

WORKDIR /var/www/html

EXPOSE 9000

CMD ["php-fpm"]
